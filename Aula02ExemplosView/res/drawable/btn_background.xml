<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ef4444" />
            <stroke android:width="1dp" android:color="#992f2f" />
            <corners android:radius="3dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="#992f2f" android:startColor="#ef4444" />
            <stroke android:width="1dp" android:color="#992f2f" />
            <corners android:radius="3dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
   </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/btn_disabled_grey" android:startColor="@color/btn_disabled_grey" />
            <stroke android:width="1dp" android:color="@color/btn_disabled_hard_grey" />
            <corners android:radius="3dp" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape>
   </item>
</selector>